    <script>
        function testChatWidget() {
            try {
                // Try to open the chat widget programmatically
                if (window.LiveChatWidget) {
                    window.LiveChatWidget.call('maximize');
                    alert('Chat widget opened programmatically!');
                } else {
                    alert('LiveChat widget is not yet loaded. Please wait a moment and try again.');
                }
            } catch (error) {
                alert('Error testing chat widget: ' + error.message);
            }
        }

        // Check if LiveChat is loaded
        window.addEventListener('load', function() {
            setTimeout(function() {
                if (window.LiveChatWidget) {
                    console.log('‚úÖ LiveChat widget loaded successfully!');
                } else {
                    console.log('‚ùå LiveChat widget not detected');
                }
            }, 3000);
        });
    </script>

